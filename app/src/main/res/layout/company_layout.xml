<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="ชื่อนิติบุคคล"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textview_name_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Red"
            android:gravity="right"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_rounded_colorprimarydark">

        <EditText
            android:id="@+id/comp_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:padding="4dp"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            android:maxLines="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="เลขประจำตัวผู้เสียภาษี"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textview_tax_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Red"
            android:gravity="right"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_rounded_colorprimarydark">

        <EditText
            android:id="@+id/comp_tax_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:padding="4dp"
            android:paddingLeft="4dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="13"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="ชื่อผู้ติดต่อ"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textview_contact_name_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Red"
            android:gravity="right"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_rounded_colorprimarydark">

        <EditText
            android:id="@+id/comp_contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:padding="4dp"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            android:maxLines="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="เบอร์โทรผู้ติดต่อ"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textview_contact_mobile_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/Red"
            android:gravity="right"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_rounded_colorprimarydark">

        <EditText
            android:id="@+id/comp_contact_mobil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:padding="4dp"
            android:paddingLeft="4dp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="10"/>

    </LinearLayout>

</LinearLayout>
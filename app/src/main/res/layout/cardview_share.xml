<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banner_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner header"
            android:textSize="18sp"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/no_image"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/banner_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์สมัครตัวแทนออนไลน์"
            android:padding="4dp"/>

        <include layout="@layout/item_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/share_facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_facebook"/>

            <include layout="@layout/item_divider_horizontal"/>

            <ImageView
                android:id="@+id/share_google_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_google_plus"/>

            <include layout="@layout/item_divider_horizontal"/>

            <ImageView
                android:id="@+id/share_twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_twitter"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>